<?xml version='1.0' encoding='UTF-8'?>

<!DOCTYPE properties SYSTEM 'http://java.sun.com/dtd/properties.dtd'>

<properties>

    <!-- Database configuration - H2 for testing -->
    <entry key='database.driver'>org.h2.Driver</entry>
    <entry key='database.url'>jdbc:h2:./data/database</entry>
    <entry key='database.user'>sa</entry>
    <entry key='database.password'></entry>

    <!-- Server configuration -->
    <entry key='web.port'>8082</entry>
    <entry key='web.path'>./web</entry>

    <!-- Geocoding configuration -->
    <entry key='geocoder.enable'>true</entry>
    <entry key='geocoder.type'>nominatim</entry>
    <entry key='geocoder.url'>https://nominatim.openstreetmap.org/reverse</entry>

    <!-- Default protocol port (disable for Railway) -->
    <entry key='gps103.port'>0</entry>
    
    <!-- Logging configuration -->
    <entry key='logger.enable'>true</entry>
    <entry key='logger.level'>info</entry>
    
    <!-- Event configuration -->
    <entry key='event.enable'>true</entry>
    
    <!-- Notification configuration -->
    <entry key='notificator.types'>web,mail</entry>

</properties>